{{> header}}

<h1>Login</h1>
<form method="post">
    <div>
        <input placeholder="Email" name="email" type="email" />
    </div>
    <div>
        <input placeholder="Password" name="password" type="password" />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
    <div>
        <a href="/user/forget">Esqueci minha senha</a>
    </div>
</form>