{{#flashes}}
    {{#sucess}}
        <div>{{.}}</div>
    {{/sucess}} 
    {{#error}}
        <div>{{.}}</div>
    {{/error}}  
    {{#info}}
        <div>{{.}}</div>
    {{/info}}   
{{/flashes}}
