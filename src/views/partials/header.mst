<head>
    {{#pageTitle}}
        <title>{{pageTitle}}</title>
    {{/pageTitle}}
    {{^pageTitle}}
        <title>{{helpers.defaultPageTitle}}</title>
    {{/pageTitle}}
    <link rel="stylesheet" href="/assets/css/style.css"/>
</head>
<body>
    <header>
        <h1>CABEÇALHO</h1>
        {{#user}}
            <p>Olá <a href="/user/profile">{{username}}.</a></p>
        {{/user}}
        <nav>
            {{#helpers.menu}}
                <div>
                    <a href="{{slug}}">{{nome}}</a>
                </div>     
            {{/helpers.menu}}
        </nav>
    </header>
